<Window x:Class="WPF_MyProg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MyProg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFB7DEFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="172*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="40" HorizontalAlignment="Center"  Foreground="#FF1C2283" FontWeight="Bold" FontStyle="Italic" TextDecorations="Underline" FontFamily="Candara"/>
        <StackPanel Grid.Row="1" MaxWidth="500" Margin="0,100,0,65">
            <TextBlock Text="Логин" FontSize="30" HorizontalAlignment="Center" Foreground="#FFF4B098" FontWeight="Bold" FontFamily="Candara"/>
            <TextBox Name="tbLogin"/>
            <TextBlock Text="Пароль" FontSize="30" HorizontalAlignment="Center" Foreground="#FFFDA992" FontWeight="Bold" FontFamily="Candara"/>
            <TextBox Name="tbPassword"/>

            <Button Margin="0,10" Content="Войти" FontSize="20" Background="#FF1B1C20" Foreground="#FFF7F7F7" FontWeight="Bold" Click="Authorization_Click" Width="313" Height="34"/>
        </StackPanel>
    </Grid>

</Window>
